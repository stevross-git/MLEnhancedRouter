# ============================================================================
# ML Enhanced Router with CSP Network Integration - Environment Configuration
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# SQLite (default for development)
DATABASE_URL=sqlite:///ml_router_network.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/ml_router_network

# ============================================================================
# SESSION AND SECURITY CONFIGURATION
# ============================================================================
SESSION_SECRET=your-super-secret-session-key-change-in-production-min-32-chars
JWT_SECRET=your-jwt-secret-key-for-api-authentication

# ============================================================================
# CSP NETWORK CONFIGURATION
# ============================================================================
# Enable/disable CSP Network integration
CSP_NETWORK_ENABLED=true

# CSP Network node configuration
CSP_NETWORK_PORT=30405
CSP_NETWORK_NODE_NAME=ml-router-bridge
CSP_NETWORK_NODE_TYPE=ai_service
CSP_NETWORK_DATA_DIR=./ml_router_network_data

# Genesis server configuration
CSP_NETWORK_GENESIS_HOST=genesis.peoplesainetwork.com
CSP_NETWORK_GENESIS_PORT=30300

# Bootstrap nodes (comma-separated multiaddresses)
BOOTSTRAP_NODES=/ip4/genesis.peoplesainetwork.com/tcp/30300,/ip4/127.0.0.1/tcp/30301,/ip4/127.0.0.1/tcp/30302

# ============================================================================
# ML ROUTER CONFIGURATION
# ============================================================================
# Enable/disable ML Router
ML_ROUTER_ENABLED=true

# ML Router server configuration
ML_ROUTER_PORT=5000
ML_ROUTER_HOST=0.0.0.0
ML_ROUTER_DEBUG=false

# ============================================================================
# AI PROVIDER API KEYS
# ============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-openai-org-id-here

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Gemini Configuration
GEMINI_API_KEY=your-google-gemini-api-key-here

# xAI Configuration
XAI_API_KEY=your-xai-api-key-here

# Perplexity Configuration
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# Cohere Configuration
COHERE_API_KEY=your-cohere-api-key-here

# Mistral Configuration
MISTRAL_API_KEY=your-mistral-api-key-here

# Local Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_ENABLED=false

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Network features
ENABLE_DHT=true
ENABLE_MESH=true
ENABLE_DNS=true
ENABLE_ADAPTIVE_ROUTING=true
ENABLE_ML_PREDICTION=true
ENABLE_REAL_TIME_LEARNING=true
ENABLE_METRICS_COLLECTION=true

# Node capabilities
ENABLE_AI_CAPABILITY=true
ENABLE_COMPUTE_CAPABILITY=true
ENABLE_RELAY_CAPABILITY=true
ENABLE_STORAGE_CAPABILITY=false
ENABLE_QUANTUM_CAPABILITY=false

# Security features
ENABLE_ENCRYPTION=true
ENABLE_AUTHENTICATION=true
KEY_SIZE=2048

# ============================================================================
# CONNECTION CONFIGURATION
# ============================================================================
MAX_CONNECTIONS=50
CONNECTION_TIMEOUT=30
ENABLE_MDNS=true
ENABLE_UPNP=true
ENABLE_NAT_TRAVERSAL=true

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
THREAD_POOL_SIZE=10
QUERY_TIMEOUT_SECONDS=60
ENABLE_ASYNC_PROCESSING=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=ml_router_network.log
ENABLE_STRUCTURED_LOGGING=true

# ============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# ============================================================================
# Redis for caching and session storage
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your-redis-password
# REDIS_DB=0
# REDIS_MAX_CONNECTIONS=10

# ============